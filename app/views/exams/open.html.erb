<h5>
  <b>Prueba:</b> <%= link_to @exam.name, @exam %> 
</h5>
<br/>

<%= form_tag(exam_exam_eval_path, method: "post", local: true, class: '') do %>
    <ol>
    <% @exam.questions.order("position").each do |question| %>
        <li class="mb-5">
            <h5><%= question.content %></h5>
            <div>
                <% question.options.order("position").each do |option| %>
                    <div class="form-check">
                        <input class="form-check-input" type="radio" name="options_question[<%= option.id %>]" id="option_<%= option.id %>" value="true">
                        <label class="form-check-label" for="option_<%= option.id %>">
                            <%= option.content %>
                        </label>
                    </div>
                <% end %>
            </div>
        </li>
    <% end %>
    </ol>
    <%= submit_tag "Enviar Resultados", class: 'btn btn-primary float-right' %>
<% end %>

