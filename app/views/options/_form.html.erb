<%= form_with(model: [@question.exam, @question, option], local: true) do |form| %>
  <% if option.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(option.errors.count, "error") %> prohibited this option from being saved:</h2>

      <ul>
        <% option.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label "Posición" %>
    <%= form.number_field :position, :class => "form-control" %>
  </div>

  <div class="form-group">
    <%= form.label "Opción" %>
    <%= form.text_field :content, :class => "form-control" %>
  </div>

  <div class="form-check">
    <%= form.check_box :is_correct, :class => "form-check-input" %>
    <%= form.label "Es Correcta?", :class => "form-check-label" %>
  </div>

  <div class="form-group text-right mt-4">
    <%= link_to 'Volver', exam_question_options_path(@question.exam, @question), :class => "float-left btn btn-secondary" %>
    <%= form.submit 'Guardar', :class => 'btn btn-primary' %>
  </div>
<% end %>
